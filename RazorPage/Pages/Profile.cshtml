@page
@model ProfileModel
@{
    ViewData["Title"] = "Quản lý Profile";
}
<h2>Thông tin cá nhân</h2>

<form method="post">
    <div>
        <label>Họ tên:</label>
        <input asp-for="CurrentUser.FullName" />
    </div>
    <div>
        <label>Email:</label>
        <input asp-for="CurrentUser.Email" />
    </div>
    <div>
        <label>Số điện thoại:</label>
        <input asp-for="CurrentUser.Phone" />
    </div>
    <button type="submit">Lưu</button>
</form>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-success">@ViewData["Message"]</div>
}
